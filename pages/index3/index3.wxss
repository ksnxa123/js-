page{
  background-color: #f1f1f1;
  overflow: scroll;
}
.blog {
  padding: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.blog-title {
  display: flex;
  align-items: center;
}
.blog-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.blog-box {
  flex: 1;
}
.blog-time {
  font-size: 24rpx;
  color: #939393;
}
.blog-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-word;
  white-space: pre-line;
}

.blog-img {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  position: relative;
}
.blog-img .img {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}
.blog-img .img:nth-child(3n) {
  margin-right: 0;
}
.blog-nickName {
  font-size: 32rpx;
}
.imgnum{
  position: absolute;
  width: 230rpx;
  height: 230rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  color: #fff;
  text-align: center;
  line-height: 230rpx;
  font-size: 48rpx;
  background-color: rgba(110, 104, 104, 0.6);
  filter: blur(50);
  top: 480rpx;
  left: 480rpx;
}