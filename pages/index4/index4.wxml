<view class="blog">
  <view class="blog-title">
    <image class="blog-portrait" src="{{content.avatarUrl}}"></image>
    <view class="blog-box">
      <view class="blog-nickName">{{content.nickName}}</view>
      <view class="blog-time">{{ content._createTime}}</view>
    </view>
  </view>
  <view class="blog-content">
    <text>{{content.content}}</text>
  </view>
  <view class="blog-img">
    <block wx:for="{{content.img}}" wx:key="index" wx:for-item="item">
      <image class="img" src="{{item}}" mode="aspectFill" catch:tap="onPreviewImage" data-imgsrc="{{item}}" data-imgs="{{content.img}}"></image>
    </block>
  </view>
</view>